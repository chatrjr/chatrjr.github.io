.main-menu
  @extends .u-justify-right
  font-family: code-family
  font-weight: headings-weights-0
  height: 3em
  padding-top: padding-large
  @media mini
    padding: 0

.main-menu__link
  color: colors-main-text
  display: inline-block
  vertical-align: middle
  font-size: ($font-size-base * 1.15)
  @media mini
    font-size: ($font-size-base / 1.15)
  &:hover, &:focus
    color: colors-main-media

.main-menu__icon
  width: ($font-size-base * 1.15)
  height: ($font-size-base * 1.15)

.footer-menu
  font-family: code-family
  font-weight: headings-weights-0

.footer-menu-section.node
  margin: 0

.footer-menu__item
  display: block

.footer-menu__icon
  margin: (padding-small / 4)
  width: 2.5em
  height: 2.5em
  @media medium
    width: 2em
    height: 2em