.articles-title
  border-bottom: border-hairline border-type[0] colors-main-accent
  color: colors-main-text
  display: block
  padding-bottom: (padding-small / 2.5)
  @media mini
    border-width: border-thin
  @media small
    border-width: border-thin
  @media medium
    border-width: border-thin

.articles-meta
  margin-top: -(padding-small * 1.05)
  @media mini
    font-size: ($font-size-base / 1.25)

.articles-meta__date
  background: colors-main-accent
  color: colors-main-accent-fill
  font-size: ($font-size-base * 1.25)
  padding: (padding-small / 2)

.articles-meta__tags
  font-family: code-family

.articles-meta__link
  padding: padding-small
  position: relative
