//////////////
// Headings //
//////////////

.h1, 
h1,
.h2, 
h2,
.h3,
h3,
.h4,
h4,
.h5,
h5,
.h6,
h6
  font-family: headings-family
  font-weight: headings-weights-0
  & a
    font-weight: headings-weights-0

.h2,
h2
  border-bottom: border-thin border-type[0] colors-clashes-accent-0

.h4,
h4
  border-bottom: border-hairline border-type[1] colors-main-base

/////////////////
// Blockquotes //
/////////////////

blockquote
  @extends $u-highlighted
  font-size: ($font-size-base * 1.25)
  padding-bottom: padding-medium
  position: relative
  .rhythm &
    padding-bottom: padding-medium

/////////////////////
// Definition List //
/////////////////////

dl > dt
  border-left: border-med border-type[0] colors-clashes-text-0
  background: colors-clashes-accent-0
  color: colors-main-bg
  font-weight: body-weights-2
  padding-left: (padding-small / 3)