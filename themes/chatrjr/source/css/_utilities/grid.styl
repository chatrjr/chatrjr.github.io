*,
*:before,
*:after
  box-sizing: border-box

.container
  max-width: layout-container-width
  margin: 0 auto
  padding: 0 0.5em 0.5em 0.5em

$clearfix
  content: ""
  clear: both
  display: table

.grid
  margin-bottom: 1em

.grid:after
  @extends $clearfix

.inner-grid
  margin: 0

.inner-grid:after
  @extends $clearfix

.node
  @extends .grid
  float: left
  margin-bottom: 0

.full
  .node
    width: 100%

.golden
  .node.minor
    width: 100% - 61.804697157%

  .node.major
    width: 61.804697157%

.halves
  .node
    width: (100% / 2)

.quarters
  .node
    width: (100% / 4)

.eighths
  .node
    width: (100% / 8)

/* For multi-column needs. */

.complex
  slices(layout-columns)
