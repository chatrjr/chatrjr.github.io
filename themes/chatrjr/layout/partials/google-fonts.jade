-
  var 
    typefaces = site.data.typography,
    body = typefaces.body,
    headings = typefaces.headings,
    code = typefaces.code,
    fonts = [
      format(body),
      format(headings),
      format(code)
    ].join("|");
    
    function format(typeface) {
      return [
        typeface.family.split(" ").join("+"),
        typeface.weights.join(",")
      ].join(":");
    }
link(href="http://fonts.googleapis.com/css?family=#{fonts}", type="text/css", rel="stylesheet")
