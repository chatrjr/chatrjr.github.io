mixin display-date(d)
  span.articles-meta__date= date(d, 'MM/DD/YYYY')

mixin display-tags(t)
  span.articles-meta__tags
    if t.length > 0
      - t.each(function(tag) {
        a.articles-meta__link(href=url_for(tag.path))= tag.name
      - })

.articles-meta
  +display-date(article.date)
  +display-tags(article.tags)